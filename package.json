{
  "name": "millegrilles.reactjs",
  "version": "2022.5.0",
  "description": "Composants communs pour MilleGrilles front-end avec ReactJS",
  "author": "dugrema",
  "license": "MIT",
  "repository": "dugrema/millegrilles.reactjs",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.js",
  "scripts": {
    "build": "microbundle-crl --no-compress --format modern,cjs",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && npm install && npm run build",
    "deploy": "gh-pages -d example/build"
  },
  "dependencies": {
    "@dugrema/millegrilles.utiljs": "github:dugrema/millegrilles.utiljs#2022.5",
    "axios": "^0.27.2",
    "base64url": "^3.0.1",
    "bootstrap": "^5.2",
    "comlink": "^4.3.1",
    "hash-wasm": "^4.9.0",
    "html5-qrcode": "^2.2.1",
    "i18n": "^0.15.0",
    "idb": "^7.0.2",
    "libsodium-wrappers": "^0.7.10",
    "moment-duration-format": "^2.3",
    "moment-timezone": "^0.5.34",
    "multibase": "^4.0.6",
    "react": "^18",
    "react-bootstrap": "^2.5",
    "react-dropzone": "^14.2.2",
    "react-i18next": "^11.18.4",
    "react-visibility-sensor": "^5.1.1",
    "socket.io-client": "^4.5.1",
    "webpack": "5.74.0"
  },
  "peerDependencies": {
    "@dugrema/node-forge": "github:dugrema/forge#ed25519",
    "multiformats": "^9.6.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "gh-pages": "^4.0.0",
    "microbundle-crl": "^0.13.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "react-dom": "^18",
    "react-full-screen": "^1.1.1",
    "react-scripts": "^5"
  },
  "files": [
    "dist",
    "src"
  ]
}
