{
  "name": "millegrilles.reactjs",
  "version": "2022.0.0",
  "description": "Composants communs pour MilleGrilles front-end avec ReactJS",
  "author": "dugrema",
  "license": "MIT",
  "repository": "dugrema/millegrilles.reactjs",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.js",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle-crl --no-compress --format modern,cjs",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && npm install && npm run build",
    "deploy": "gh-pages -d example/build"
  },
  "peerDependencies": {
    "@dugrema/millegrilles.utiljs": "git+ssh://git.maceroc.com/git/millegrilles.utiljs#2022.0.0",
    "@dugrema/node-forge": "github:dugrema/forge#ed25519",
    "axios": "^0.24.0",
    "base64url": "^3.0.1",
    "bootstrap": "^5.1",
    "comlink": "^4.3.1",
    "idb": "^7.0.0",
    "moment-duration-format": "^2.3",
    "moment-timezone": "^0.5.34",
    "multibase": "^4.0.6",
    "react": "^17.0",
    "react-bootstrap": "^2.0",
    "react-dropzone": "^11.4.2",
    "react-player": "^2.9.0",
    "socket.io-client": "^4.4.0",
    "webpack": "~4.44.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.3",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-config-standard-react": "^11.0.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-standard": "^5.0.0",
    "gh-pages": "^3.2.3",
    "microbundle-crl": "^0.13.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "react-dom": "^17.0.2",
    "react-full-screen": "^1.1.0",
    "react-scripts": "^4.0.3"
  },
  "files": [
    "dist",
    "src"
  ]
}
